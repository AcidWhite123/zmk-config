#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    behaviors {
        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = <135>;
            bindings = <&kp Y>, <&tog 1>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default";

            bindings = <
                &kp Q &kp W &kp E &kp R &kp T &kp Z
                &kp A &kp S &kp D &kp F &kp G &kp H
                &td0  &kp X &kp C &kp V &kp B &kp N
            >;
        };

        function_layer {
            display-name = "Function";

            bindings =<
                &bt BT_SEL 0 &bt BT_SEL 1   &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &bt BT_SEL 5
                &bootloader  &studio_unlock &none        &none        &none        &none
                &tog 1       &none          &none        &none        &none        &none
            >;
        };
    };
};
